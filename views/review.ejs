<div class="container d-flex justify-content-center align-items-center vh-100">
<div class="card w-50 bg-warning text-light">
    <h1 class="card-header text-center">Assisgn Review to Employee</h1>
    <div class="card-body">
    <form action="/review/createReview" method="post">
      <div class="mb-3">
        <label for="recipient">Recipient: </label>
        <select class="form-select" name="recipient" id="recipient" aria-label="Default select example">
            <% for (let emp of users) {%>
              <%if(emp.isAdmin === false){%>
            <option value="<%=emp.id%>"><%=emp.name%></option>
            <%}%>
            <%}%>
          </select>
        </div>
        <div class="mb-3">
          <label for="reviewer">Reviewer: </label>
        <select class="form-select" name="reviewer" id="recipient" aria-label="Default select example">
            <% for (let emp of users) {%>
              <%if(emp.isAdmin === false){%>
            <option value="<%=emp.id%>"><%=emp.name%></option>
            <%}%>
            <%}%>
          </select>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
  </div>
</div>
</div>